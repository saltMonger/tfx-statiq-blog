<form class="contact-form" id="contact-me">
    <div class="tfx-row-2">
        <div class="tfx-row-card form-group">
            <label for="emailInput">Your email</label>
            <input class="form-control" type="email" placeholder="your@email.domain" id="emailInput" required>
        </div>
        <div class="tfx-row-card form-group">
            <label for="nameInput">Your name</label>
            <input class="form-control" type="text" id="nameInput" placeholder="your name" required>
        </div>
    </div>
    <div class="form-group tfx-mt-3">
        <label for="messageInput">Message</label>
        <textarea class="form-control" placeholder="Howdy!" id="messageInput" required></textarea>
    </div>
    <br />

    <div class="tfx-mt-3 text-center">
        <button type="submit" class="tfx-btn tfx-btn-teal btn-lg" id="submitButton">Submit</button>
    </div>
</form>

<div aria-live="polite" aria-atomic="true">
    <div id="successToast" class="tfx-toast" hidden style=" position: absolute; top: 10%; left: 50%; transform: translateX(-50%);">
      <div class="tfx-toast-header-success">
        <strong class="mr-auto">Thank you for your correspondence!</strong>
      </div>
    </div>
</div>

<div aria-live="polite" aria-atomic="true">
    <div id="errorToast" class="tfx-toast" hidden style=" position: absolute; top: 10%; left: 50%; transform: translateX(-50%);">
      <div class="tfx-toast-header-error">
        <strong class="mr-auto">Something happened... try that again.</strong>
      </div>
    </div>
</div>