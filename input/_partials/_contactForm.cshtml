<form class="contact-form" id="contact-me">
    <div class="row">
        <div class="col-md-6 form-group">
            <label for="emailInput">Your email</label>
            <input class="form-control" type="email" placeholder="your@email.domain" id="emailInput">
        </div>
        <div class="col-md-6 form-group">
            <label for="nameInput">Your name</label>
            <input class="form-control" type="text" id="nameInput" placeholder="your name">
        </div>

        <div class="col-md-12 form-group">
            <label for="messageInput">Message</label>
            <textarea class="form-control" placeholder="Howdy!" id="messageInput"></textarea>
        </div>

        <br />

        <div class="col-md-12 text-center">
            <button type="button" class="tfx-btn tfx-btn-teal btn-lg" id="submitButton">Submit</button>
        </div>
    </div>
</form>

<div aria-live="polite" aria-atomic="true">
    <div id="successToast" class="toast" style=" position: absolute; top: 0; left: 50%; transform: translateX(-50%);">
      <div class="tfx-toast-header-success">
        <strong class="mr-auto">Thank you for your correspondence!</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span class="tfx-white-link" aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
</div>

<div aria-live="polite" aria-atomic="true">
    <div id="errorToast" class="toast" style=" position: absolute; top: 0; left: 50%; transform: translateX(-50%);">
      <div class="tfx-toast-header-error">
        <strong class="mr-auto">Something happened... try that again.</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span class="tfx-white-link" aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
</div>