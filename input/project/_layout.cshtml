<!DOCTYPE html>
    <head>
        @Html.Partial("_partials/_head")
        @RenderSection("head", required: false)
        <link href="//cdn.muicss.com/mui-0.10.3/css/mui.min.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="main">
        @Html.Partial("_partials/_header")
        <div id="site_container" class="container-fluid flex-fill">
            <div class="row">
                <main id="page_container" role="main" class="col">
                    <section class="body-section">
                        <div class="body-container">
                            <div class="row">
                                <div class="col-12 @(Model.GetBool("HideSidebar") ? "" : "col-lg-9")">
                                    @RenderBody()
                                </div>
                                @if (!Model.GetBool("HideSidebar") && Model.GetString("Type") == "Project")
                                {
                                    <div class="col-lg-3 col-12">
                                        @Html.Partial($"/{Constants.ProjectPath}/components/_projectSidebar.cshtml", Model)
                                    </div>

                                }
                                else 
                                {
                                    <div class="col-lg-3 col-12">
                                        @Html.Partial($"/{Constants.BlogPath}/_sidebar.cshtml")
                                    </div>
                                }
                            </div>
                            
                        </div>
                    </section>
                    @Html.Partial("_partials/_footer")
                </main>
            </div>
        </div>
        <script src="//cdn.muicss.com/mui-0.10.3/js/mui.min.js"></script>
    </body>
</html>